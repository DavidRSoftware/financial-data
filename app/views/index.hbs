<div class="container">

  <div class="row mt-2">
    <div class="col">

      <form class="form-inline">

        <input class="form-control mr-2" type="text" id="ticker" placeholder="Enter Stock Ticker" maxlength="5">

        <input type="submit" class="btn btn-primary" id="submitButton" value="Add">

        <div class="invalid-feedback ml-3">Stock entered does not exist</div>

      </form>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col">
      <table class="table table-striped table-hover table-responsive">
        <thead>
        <tr>
          <th>Stock ID</th>
          <th>Ticker</th>
          <th>Name</th>
          <th>Price</th>
          <th>Created Date</th>
          <th>Created Time</th>
        </tr>
        </thead>
        <tbody id="table">

        </tbody>

      </table>
    </div>
  </div>
</div>