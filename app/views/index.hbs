<div class="modal fade" id="welcomeModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true"
  data-backdrop="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">Welcome to the Explorer Game</h5>
      </div>
      <div class="modal-body">
        Use the arrow buttons on the right side of the screen to navigate.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Continue</button>
      </div>
    </div>
  </div>
</div>

<div class="container">
  
  <div class="row mt-2">
    <div class="col">

      <form class="form-inline">

        <input class="form-control mr-2" type="text" id="ticker" placeholder="Enter Stock Ticker" maxlength="5" required>

        <input class="form-control mr-2" type="text" id="name" placeholder="Enter Stock Name" required>

        <input type="submit" class="btn btn-primary" id="submitButton" value="Add">

      </form>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col">
      <table class="table table-striped table-hover table-responsive">
        <tr>
          <th>Stock ID</th>
          <th>Ticker</th>
          <th>Name</th>
          <th>Created Date Time</th>
          <th>Updated Date Time</th>
        </tr>


        <tr>
          <td>{{this.StockID}}</td>
          <td>{{this.Ticker}}</td>
          <td>{{this.StockName}}</td>
          <td>{{this.CreatedDateTime}}</td>
          <td>{{this.UpdatedDateTime}}</td>
          <td class="text-center"><input type="submit" class="btn btn-primary" id="edit" value="Edit"></td>
          <td class="text-center"><input type="submit" class="btn btn-primary" id="remove" value="Remove"></td>
          </form>
        </tr>

      </table>
    </div>
  </div>
</div>